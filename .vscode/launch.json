  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: 当前文件",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/WebCrawler/api",
      "console": "integratedTerminal",
      "env": { "PYTHONPATH": "${workspaceRoot}" }
    },
    {
      "name": "Scrapy",
      "type": "python",
      "request": "launch",
      "module": "scrapy",
      "args": ["crawl", "juejin"],
      "cwd": "${workspaceFolder}/payapa"
    },
    {
      "name": "Python: Flask (0.11.x or later)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py"
      },
      "args": ["run", "--no-debugger", "--no-reload"]
    }
  ]
}
